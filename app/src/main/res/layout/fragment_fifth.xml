<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FifthFragment"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttons">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:elevation="3dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/colorBackground"
                    app:contentPadding="5dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pregnancy History"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Is the patient pregnant right now?"
                            android:textColor="@color/colorTextPrimary"/>


                        <RadioGroup
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yes"
                                android:buttonTint="@color/colorPrimary"/>

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:buttonTint="@color/colorPrimary"/>

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not Sure"
                                android:buttonTint="@color/colorPrimary"/>

                        </RadioGroup>

                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="When was the last menstrual period?"
                            android:textColor="@color/colorTextPrimary"/>

                        <Button
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="60dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Date"
                            android:textSize="20sp"
                            android:textAllCaps="false"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBackground"
                            android:background="@drawable/primary_btn"/>


                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No Date Selected"
                            android:gravity="center"
                            android:textColor="@color/colorTextPrimary"/>


                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parity"
                            android:textSize="16sp"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How many children has the patient ever delivered (Alive or Dead)?"
                            android:textColor="@color/colorTextSecondary"/>

                        <EditText
                            android:layout_marginTop="10dp"
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:inputType="number"
                            android:paddingLeft="5dp"
                            android:background="@drawable/text_bg"/>

                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Abortions"
                            android:textSize="16sp"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How many abortions or miscarriges has the patient ever had?"
                            android:textColor="@color/colorTextSecondary"/>

                        <EditText
                            android:layout_marginTop="10dp"
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:inputType="number"
                            android:paddingLeft="5dp"
                            android:background="@drawable/text_bg"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_btn"
            android:layout_margin="10dp"
            android:text="Back"
            android:textColor="@color/colorBackground"/>

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/primary_btn"
            android:textColor="@color/colorBackground"/>

    </RelativeLayout>

</RelativeLayout>