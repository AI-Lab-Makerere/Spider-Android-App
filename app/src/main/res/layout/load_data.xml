<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patient's Detials"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:gravity="center"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="10dp"
                    app:cardElevation="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/colorBackground"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Identification"
                            android:layout_marginTop="10dp"
                            android:textStyle="italic"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGrey"/>

                        <TextView
                            android:id="@+id/studyId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Study ID: UC008"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/initials"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Initials: TY"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/age"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Age: 25"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/address"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address: oraba-Koboko (Arua)"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cancer Symptoms"
                            android:layout_marginTop="10dp"
                            android:textStyle="italic"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGrey"/>

                        <TextView
                            android:id="@+id/signs"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Presence of symptoms: Yes"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/symptoms"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Symptoms:"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/other_symptoms"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Other Symptoms: Yes"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Previous Cancer Screening"
                            android:layout_marginTop="10dp"
                            android:textStyle="italic"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGrey"/>

                        <TextView
                            android:id="@+id/screened"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Patient ever for cancer: Yes"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/date"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Screening Date: 10/10/2021"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/results"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="VIA Results: Positive"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/process"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Screening Process: HPV"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/treatment"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Treatment provided: none"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HIV Status"
                            android:layout_marginTop="10dp"
                            android:textStyle="italic"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGrey"/>

                        <TextView
                            android:id="@+id/hiv"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HIV status: Positive"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/onHaart"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Patient On Haart: Positive"
                            android:textColor="@color/colorTextPrimary"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <TextView
                            android:id="@+id/years"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Years on Haart: Positive"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pregnancy History"
                            android:layout_marginTop="10dp"
                            android:textStyle="italic"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGrey"/>

                        <TextView
                            android:id="@+id/pregnant"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Patient pregnant: Yes"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/last"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Menstrual peroid: 10/20/2021"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/parity"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parity: 20"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/abortion"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Abortions: 20"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/on_con"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="On Contraceptives: Yes"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/contra"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contraceptives Used: Yes"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nurse's VIA Observation"
                            android:layout_marginTop="10dp"
                            android:textStyle="italic"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGrey"/>

                        <TextView
                            android:id="@+id/via"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nurse's VIA Results: Positive"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/lesion"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lesion: Positive"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/notes"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nurse's VIA Results: Positive"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Model Results"
                            android:layout_marginTop="10dp"
                            android:textStyle="italic"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGrey"/>

                        <TextView
                            android:id="@+id/model"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="VIA Results: Positive"
                            android:textColor="@color/colorTextPrimary"/>

                        <TextView
                            android:id="@+id/agreement"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="You and the model are in: Positive"
                            android:textColor="@color/colorTextPrimary"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </ScrollView>



</RelativeLayout>